@model List<Model.EF.Product>
@{
    var category = (Model.EF.ProductCategory)ViewBag.Category;
    ViewBag.Title = category.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="content">
        <div class="content_top">
            <div class="heading">
                <h3>@category.Name</h3>
            </div>
            <div class="see">
                <p><a href="#">Xem tất cả sản phẩm</a></p>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            @foreach (var item in Model)
            {
                var link = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
                <div class="grid_1_of_4 images_1_of_4">
                    <a href="@link"><img src="@item.Image" alt="@item.Name" /></a>
                    <h2>@item.Name </h2>
                    <div class="price-details">
                        <div class="price-number">
                            <p><span class="rupees">@(item.Price.HasValue?@item.Price.Value.ToString("N0"):"Liên hệ")</span></p>
                        </div>
                        <div class="add-cart">
                            <h4><a href="/them-gio-hang?productId=@item.ID&quantity=1">Thêm vào giỏ</a></h4>
                        </div>
                        <div class="clear"></div>
                    </div>

                </div>
            }
        </div>
        <div class="row">
            @*Phân trang*@
            @if (ViewBag.TotalPage > 1)
            {
                var pageDisplay = (int)ViewBag.MaxPage;
                int totalPage = (int)ViewBag.TotalPage;
                int currentPage = ((int)ViewBag.Page);

                // Create numeric links
                var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
                var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);

                var link = "/san-pham/" + category.MetaTitle + "-" + category.ID;

                <div class="pagination col-12">
                    @if (currentPage > ViewBag.First)
                    {
                        <a href="@link?page=@ViewBag.First" title="Trang đầu" class="first">&laquo;</a>

                        <a href="@link?page=@ViewBag.Prev" title="Trang trước" class="prev">&lsaquo;</a>
                    }
                    @for (int i = startPageIndex; i <= endPageIndex; i++)
                    {
                        if (currentPage == i)
                        {

                            <a href="@link?page=@i" class="active" title="Trang @i">@i</a>
                        }
                        else
                        {
                            <a href="@link?page=@i" title="Trang @i" class="pos">@i</a>
                        }
                    }
                    @if (currentPage < totalPage)
                    {
                        <a href="@link?page=@ViewBag.Next" class="next" title="Trang sau">&rsaquo;</a>
                        <a href="@link?page=@ViewBag.Last" class="last" title="Trang cuối">&raquo;</a>
                    }

                </div>



            }
            else
            {
                <span>Không có sản phẩm nào</span>
            }
        </div>
    </div>

