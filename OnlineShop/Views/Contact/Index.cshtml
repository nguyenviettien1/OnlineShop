
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="~/assets/client/js/controller/contactController.js"></script>
}
<div class="content">
    <div class="section group">
        <div class="col span_2_of_3">
            <div class="contact-form">
                <h2>Liên lạc với chúng tôi</h2>
                <form>
                    <div>
                        <span><label>Tên</label></span>
                        <span><input type="text" id="txtName" class="textbox"></span>
                    </div>
                    <div>
                        <span><label>E-mail</label></span>
                        <span><input type="text" id="txtEmail" class="textbox"></span>
                    </div>
                    <div>
                        <span><label>Địa chỉ</label></span>
                        <span><input type="text" id="txtAddress" class="textbox"></span>
                    </div>
                    <div>
                        <span><label>Số điện thoại</label></span>
                        <span><input type="text" id="txtMobile" class="textbox"></span>
                    </div>
                    <div>
                        <span><label>Nội dung</label></span>
                        <span><textarea id="txtContent"> </textarea></span>
                    </div>
                    <div>
                        <span><input type="submit" value="Gửi đi" id="btnSend" class="myButton"></span>
                    </div>
                </form>
            </div>
        </div>
        <div class="col span_1_of_3">
            <div class="contact_info">
                <h3>Địa chỉ</h3>
                <div class="map">
