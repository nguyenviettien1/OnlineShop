@model List<OnlineShop.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="~/assets/client/js/controller/cartController.js"></script>
}
    <style>
        table, tr, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        tr, td {
            padding: 5px;
            text-align: left;
        }
    </style>
<div class="content">
    <div class="content_top">
        <div class="back-links">
            <span>GIỎ HÀNG</span>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group" style="margin-top:15px;">
        @if (Model.Count > 0)
        {
            <table class="table" style="width:100%; ">
                <thead>
                    <tr>
                        <td>Mã SP</td>
                        <td>Tên SP</td>
                        <td>Ảnh SP</td>
                        <td style="width:8%">Số lượng</td>
                        <td>Đơn giá</td>
                        <td>Thành tiền</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Product.ID</td>
                            <td>@item.Product.Name</td>
                            <td style="text-align:center !important;"><img src="@item.Product.Image" width="100" /></td>
                            <td style="width:8%"><input data-id="@item.Product.ID" class="txtQuantity" type="text" value="@item.Quantity" /></td>
                            <td>@item.Product.Price.GetValueOrDefault(0).ToString("N0")</td>
                            <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</td>
                            <td><a href="#"data-id="@item.Product.ID" class="btn-delete" >Xóa</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <div style="margin-top:20px; float:right">
                <button id="btnContinue" style="background-color:blue;border:1px solid blue;color:white;padding: 8px;">Tiếp tục mua hàng</button>
                <button id="btnUpdate" style="background-color:darkmagenta;border:1px solid darkmagenta;color:white;padding: 8px;">Cập nhật giỏ hàng</button>
                <button id="btnDeleteAll" style="background-color:orangered;border:1px solid orangered;color:white;padding: 8px;">Xóa giỏ hàng</button>
                <button id="btnPayment" style="background-color:green;border:1px solid green;color:white;padding: 8px;">Thanh toán</button>
            </div>
            
        }
        else
        {
            <div class="product-box">
                <div class="notfound">
                    <p class="t3">Chưa có sản phẩm nào trong giỏ hàng</p>
                    <p>Bạn hãy tiếp tục mua sắm để có những sản phẩm tốt nhất từ cửa hàng Online Shop của chúng tôi</p>
                    <img src="~/assets/client/images/404_2.png" />
                </div>
    </div>
        }

    </div>
</div>


