
@using OnlineShop.Areas.Admin.Models;
@{
    Layout = null;
}
@model LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Login Admin OnlineShop</title>
    <link href="~/assets/admin/dist/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Đăng nhập</h3></div>
                                <div class="card-body">
                                    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                                    {
                                        @Html.ValidationSummary(false, "",new {@class="text-danger" });
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @autofocus = "autofocus",@placeholder="Nhập địa chỉ email",@autocomplete="off" })
                                        </div>
                                        <div class="form-group">
                                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Nhập password" })
                                        </div>
                                        <div class="checkbox">
                                            <label>
                                                @Html.CheckBoxFor(model => model.RememberMe)Nhớ mật khẩu
                                            </label>
                                        </div>
                                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <a class="small" href="password.html">Quên mật khẩu?</a>

                                            <button type="submit" class="btn btn-lg btn-success">Đăng nhập</button>
                                        </div>
                                    }


                                </div>
                                <div class="card-footer text-center">
                                    <div class="small"><a href="register.html">Bạn cần một tài khoản? Hãy đăng ký ngay!</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Tien's Website 2020</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
</body>
</html>